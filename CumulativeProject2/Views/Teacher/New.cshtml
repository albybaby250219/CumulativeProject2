
@{
    ViewBag.Title = "New";
}


<div id="containershow">
    <nav>
        <a class="teacherlink" href="/Author/List">Back To Teachers</a>
    </nav>
    <h2 class="title">New Teacher</h2>
    <form method="GET" action="/Teacher/Create">
        <div class="teacherdetails">
            <div class="inputrow">
                <label for="TeacherFname">First Name:</label>
                <input type="text" id="TeacherFname" name="TeacherFname" />

            </div>
            <div class="inputrow">
                <label for="TeacherLname">Last Name:</label>
                <input type="text" id="TeacherLname" name="TeacherLname" />

            </div>
            <div class="inputrow">
                <label for="TeacerEmployeeNum">Employee Num:</label>
                <input type="text" id="TeacherEmployeeNum" name="TeacherEmployeeNum" />
            </div>
            <div class="inputrow">
                <label for="TeacherSalary">Salary:</label>
                <input type="text" id="TeacherSalary" name="TeacherSalary" />
            </div>
            <div class="inputrow">
                <input type="submit" value="Create Teacher" />
            </div>
        </div>
    </form>
</div>
